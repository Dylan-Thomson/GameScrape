<section class="container article-container py-4">
  {{#if articles}}
    {{#each articles}}
      <article class="row py-3">
        <div class="col-md-3">
          <a href="{{link}}" target="_blank">
            <img class="img-responsive w-100" src="{{image}}" alt="">
          </a>
        </div>
        <div class="col-md-9">
          <h6>
            <a class="article-title" href="{{link}}" target="_blank">{{title}}</a>
          </h6>
          <p>{{summary}}</p>
          <p><a href="{{sourceLink}}" target="_blank">{{source}}</a></p>
          <div>
            <i class="view-comments far fa-lg fa-comments" data-id="{{_id}}"></i>
          </div>
        </div>
      </article>
    {{/each}}
    <nav class="text-center">
      <a class="mx-2" id="prevPage" href="{{prev}}" data-page='{{prev}}'><i class="fas fa-chevron-left"></i> Previous</a>
      Page {{page}} of <span id="pageCount" data-pageCount='{{pages}}'>{{pages}}</span>
      <a class="mx-2" id="nextPage" href="{{next}}" data-page='{{next}}'>Next <i class="fas fa-chevron-right"></i></a>
    </nav>
  {{else}}
    <article>
      <h2>No articles yet!</h2>
    </article>
  {{/if}}
</section>


<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog" aria-labelledby="comment-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="article-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <section id="article-comments">

        </section>
        <textarea class="form-control my-2" id="comment-textarea" rows="10"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="add-comment" type="button" class="btn btn-primary">Add Comment</button>
      </div>
    </div>
  </div>
</div>